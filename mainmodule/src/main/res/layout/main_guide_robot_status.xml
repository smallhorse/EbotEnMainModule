<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_hand_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/main_guide_hand_left"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/main_bg_corner_blue"
        android:layout_toRightOf="@id/iv_hand_left"
        android:layout_marginStart="15dp"
        >

        <TextView
            android:id="@+id/id_tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_guide_robotstatus"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_got_it"
            android:layout_below="@id/id_tv_text"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginStart="15dp"
            android:text="@string/main_guide_got_it"
            android:textColor="#FF38AAFF"
            android:background="@drawable/main_circle_btn"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!--<Button
        android:id="@+id/tv_skip"
