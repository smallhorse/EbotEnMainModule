<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:background="@drawable/main_touch_bg"
    >

<ImageView
    android:id="@+id/iv_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@mipmap/main_user_notification"
    android:layout_marginStart="16dp"
    android:layout_marginTop="2dp"
    />

    <TextView
        android:id="@+id/tv_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_icon"
        android:layout_marginStart="11dp"
        android:text="@string/main_notifications_tab"
        android:textColor="#FF333333"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/tv_msgcnt"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_toEndOf="@id/tv_tab"
        android:layout_marginStart="13dp"
        android:background="@drawable/main_message_unread_selector"
        android:gravity="center"
        android:text="10"
        android:textSize="9sp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        />

</RelativeLayout>